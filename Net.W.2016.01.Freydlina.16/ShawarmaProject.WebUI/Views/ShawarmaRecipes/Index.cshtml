@model IEnumerable<ShawarmaProject.DB.ShawarmaRecipe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Shawarma.ShawarmaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingradient.IngradientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Shawarma.ShawarmaName)
        </td>
        <td>
