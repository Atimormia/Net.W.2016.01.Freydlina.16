@model IEnumerable<ShawarmaProject.DB.Shawarma>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShawarmaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CookingTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShawarmaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CookingTime)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ShawarmaId }) 
        </td>
    </tr>
}

</table>
