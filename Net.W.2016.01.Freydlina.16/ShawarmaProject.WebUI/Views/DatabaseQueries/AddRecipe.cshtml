@model IEnumerable<ShawarmaProject.DB.IngradientWeight>

@{
    ViewBag.Title = "AddRecipe";
}

<h3>Recipe</h3>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Ingradient Name")
            </th>
            <th>
                @Html.DisplayName("Weight")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IngradientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteRecipeItem", new {id= item.IngradientId})
                </td>
            </tr>
        }
        <p>
            @Html.ActionLink("Add Recipe Item", "AddRecipeItem")
        </p>
    </table>

